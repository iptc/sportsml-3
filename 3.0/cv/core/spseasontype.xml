	<conceptSet>
		<concept id="spseasontypepre-season">
			<conceptId qcode="spseasontype:pre-season"/>
			<name xml:lang="en-GB">pre-season</name>
			<definition>Events played in an exhibition before the regular phase when standings
				points are awarded.</definition>
			<related uri="http://cv.iptc.org/newscodes/spseasontype/" rel="skos:inScheme"/>
		</concept>
		<concept id="spseasontypeseason-regular">
			<conceptId qcode="spseasontype:season-regular"/>
			<name xml:lang="en-GB">season-regular</name>
			<definition>The phase of a league competition when standings points are awarded toward a
				points-based championship or position in a post-season phase.</definition>
			<related uri="http://cv.iptc.org/newscodes/spseasontype/" rel="skos:inScheme"/>
		</concept>
		<concept id="spseasontypepost-season">
			<conceptId qcode="spseasontype:post-season"/>
			<name xml:lang="en-GB">post-season</name>
			<definition>A championship phase of a league competition, usually comprosed of
				elimination rounds until one team has prevailed.</definition>
			<related uri="http://cv.iptc.org/newscodes/spseasontype/" rel="skos:inScheme"/>
		</concept>
		<concept id="spseasontypeall-star-game">
			<conceptId qcode="spseasontype:all-star-game"/>
			<name xml:lang="en-GB">all-star-game</name>
			<definition>Some leagues have an all-star break and game comprised of the best
				players.</definition>
			<related uri="http://cv.iptc.org/newscodes/spseasontype/" rel="skos:inScheme"/>
		</concept>
		<concept id="spseasontypeexhibition">
			<conceptId qcode="spseasontype:exhibition"/>
			<name xml:lang="en-GB">exhibition</name>
			<definition>A game or phase with no standings points awarded.</definition>
			<related uri="http://cv.iptc.org/newscodes/spseasontype/" rel="skos:inScheme"/>
		</concept>
	</conceptSet>
