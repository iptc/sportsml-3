	<xs:complexType name="soccerActionScoreComplexType">
		<xs:annotation>
			<xs:documentation>When a team scores a goal. | Records by whom, how and when a goal was	scored and the standing after the goal.</xs:documentation>
		</xs:annotation>
		<xs:complexContent>
			<xs:extension base="baseEventActionComplexType">
				<xs:sequence>
					<xs:element name="participant" type="soccerActionParticipantComplexType" minOccurs="0"	maxOccurs="unbounded"/>
				</xs:sequence>
				<xs:attributeGroup ref="eventStateSoccer"/>
				
				<xs:attribute name="score-attempt-method" type="scoreAttemptMethod.Soccer"	use="optional">
					<xs:annotation>
						<xs:documentation>How the player attempted to score. Using head, left leg, right leg etc.</xs:documentation>
					</xs:annotation>
				</xs:attribute>
				<xs:attribute name="score-attempt-side" type="bodySide.Core" use="optional">
					<xs:annotation>
						<xs:documentation>Which side of the body the player used, left,	right...</xs:documentation>
					</xs:annotation>
				</xs:attribute>
				<xs:attribute name="score-attempt-type" type="scoreAttemptType.Soccer"	use="optional">
					<xs:annotation>
						<xs:documentation>The type of scoring attempt.</xs:documentation>
					</xs:annotation>
				</xs:attribute>
				<xs:attribute name="team-idref" type="xs:IDREF" use="optional">
					<xs:annotation>
						<xs:documentation>idref pointing to the team for which the player attempting to	score.</xs:documentation>
					</xs:annotation>
				</xs:attribute>
				<xs:attribute name="score-team" type="xs:string" use="optional">
					<xs:annotation>
						<xs:documentation>The current score for the scoring team after the score is	counted.</xs:documentation>
					</xs:annotation>
				</xs:attribute>
				<xs:attribute name="score-team-opposing" type="xs:string" use="optional">
					<xs:annotation>
						<xs:documentation>The current score for the opposing team after the score is counted.</xs:documentation>
					</xs:annotation>
				</xs:attribute>
				<xs:attribute name="shootout-shot-order" type="xs:string" use="optional">
					<xs:annotation>
						<xs:documentation>In which order the shootout shots were taken.</xs:documentation>
					</xs:annotation>
				</xs:attribute>
				<xs:attribute name="location" type="xs:string" use="optional">
					<xs:annotation>
						<xs:documentation>Location of the action on the field.</xs:documentation>
					</xs:annotation>
				</xs:attribute>
				<xs:attribute name="player-count" type="xs:string" use="optional">
					<xs:annotation>
						<xs:documentation>Number of players on the field for the stat or action.</xs:documentation>
					</xs:annotation>
				</xs:attribute>
				<xs:attribute name="player-count-opposing" type="xs:string" use="optional">
					<xs:annotation>
						<xs:documentation>Number of opposing players on the field for the stat or action.</xs:documentation>
					</xs:annotation>
				</xs:attribute>
				<xs:attribute name="shot-distance" type="xs:string" use="optional">
					<xs:annotation>
						<xs:documentation>The distance of the shot from the net.</xs:documentation>
					</xs:annotation>
				</xs:attribute>
				<xs:attribute name="shot-distance-units" use="optional">
					<xs:annotation>
						<xs:documentation>The units to describe the distance of the shot from the net.</xs:documentation>
					</xs:annotation>
					<xs:simpleType>
						<xs:restriction base="xs:string">
							<xs:enumeration value="meter"/>
						</xs:restriction>
					</xs:simpleType>
				</xs:attribute>
				<xs:attribute name="goal-zone" type="xs:string" use="optional">
					<xs:annotation>
						<xs:documentation>Area of the goal at which the scoring shot was aimed.</xs:documentation>
					</xs:annotation>
				</xs:attribute>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>

	<xs:complexType name="soccerActionSubstitionComplexType">
			<xs:annotation>
				<xs:documentation>Substition of a person involved in a game. | Substitution of one person for another in a given position in a game. Not limited to players.</xs:documentation>
			</xs:annotation>
			<xs:complexContent>
				<xs:extension base="baseEventActionComplexType">
					<xs:sequence>
						<xs:element name="participant" type="soccerActionParticipantComplexType" minOccurs="0"	maxOccurs="unbounded"/>
					</xs:sequence>
					<xs:attributeGroup ref="eventStateSoccer"/>
					<xs:attribute name="person-type" use="optional">
						<xs:annotation>
							<xs:documentation>What role the person being replaced held.</xs:documentation>
						</xs:annotation>
						<xs:simpleType>
							<xs:restriction base="xs:string">
								<xs:enumeration value="player"/>
								<xs:enumeration value="associate"/>
								<xs:enumeration value="official"/>
							</xs:restriction>
						</xs:simpleType>
					</xs:attribute>
					<xs:attribute name="person-original-position" type="position.Soccer" use="optional">
						<xs:annotation>
							<xs:documentation>Position the replaced person held.</xs:documentation>
						</xs:annotation>
					</xs:attribute>
					<xs:attribute name="person-replacing-position" type="position.Soccer" use="optional">
						<xs:annotation>
							<xs:documentation>Position the substitute will take up.</xs:documentation>
						</xs:annotation>
					</xs:attribute>
					<xs:attribute name="substitution-reason" type="xs:string" use="optional">
						<xs:annotation>
							<xs:documentation>Text explaining the reason for the substitute.</xs:documentation>
						</xs:annotation>
					</xs:attribute>
					<xs:attribute name="team-idref" type="xs:IDREF" use="optional">
						<xs:annotation>
							<xs:documentation>A pointer to the team doing the substitution.</xs:documentation>
						</xs:annotation>
					</xs:attribute>
				</xs:extension>
			</xs:complexContent>
		</xs:complexType>

		<xs:complexType name="soccerActionParticipantComplexType">
			<xs:annotation>
				<xs:documentation>Describes which player was involved in the play and how. | The role and result attributes are critical.</xs:documentation>
			</xs:annotation>
			<xs:complexContent>
				<xs:extension base="baseTeamSportsParticipantComplexType">
			<xs:attribute name="role" type="participantRole.Soccer" use="required">
				<xs:annotation>
					<xs:documentation>A controlled vocabulary specifying a player's role during the play.</xs:documentation>
				</xs:annotation>
			</xs:attribute>
			</xs:extension>
			</xs:complexContent>
		</xs:complexType>


		<xs:complexType name="soccerActionPenaltyComplexType">
			<xs:annotation>
				<xs:documentation>Results from a foul. | Details of a penalty that a foul resulted	in.</xs:documentation>
			</xs:annotation>
			<xs:complexContent>
				<xs:extension base="baseEventActionComplexType">
					<xs:sequence>
				<xs:element name="participant" type="soccerActionParticipantComplexType" minOccurs="0" maxOccurs="unbounded"/>
			</xs:sequence>
			<xs:attributeGroup ref="eventStateSoccer"/>
			<xs:attribute name="recipient-type" use="optional">
				<xs:annotation>
					<xs:documentation>What type of person or team that got the penalty.</xs:documentation>
				</xs:annotation>
				<xs:simpleType>
					<xs:restriction base="xs:string">
						<xs:enumeration value="team"/>
						<xs:enumeration value="player"/>
						<xs:enumeration value="auxilliary"/>
						<xs:enumeration value="official"/>
					</xs:restriction>
				</xs:simpleType>
			</xs:attribute>
			<xs:attribute name="team-idref" type="xs:IDREF" use="optional">
				<xs:annotation>
					<xs:documentation>A pointer to the team of the penalized or the penalized team itself.</xs:documentation>
				</xs:annotation>
			</xs:attribute>
			<xs:attribute name="offended-team-idref" type="xs:IDREF" use="optional">
				<xs:annotation>
					<xs:documentation>A pointer to the team which suffered the penalty.</xs:documentation>
				</xs:annotation>
			</xs:attribute>
			<xs:attribute name="penalty-type" type="penaltyType.Soccer" use="optional">
				<xs:annotation>
					<xs:documentation>A code name for the kind of penalty committed.</xs:documentation>
				</xs:annotation>
			</xs:attribute>
			<xs:attribute name="penalty-level" type="penaltyLevel.Soccer" use="optional">
