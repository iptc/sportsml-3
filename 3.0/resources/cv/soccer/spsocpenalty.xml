    <conceptSet>
        <concept id="spsocpenaltyserious-infraction-play">
            <conceptId qcode="spsocpenalty:serious-infraction-play"/>
            <name xml:lang="en-US">serious-infraction-play</name>
            <definition>The player has committed a serious foul play. | This leads to a player being
                sent of the field (red card).</definition>
            <related uri="http://cv.iptc.org/newscodes/spsocpenalty/" rel="skos:inScheme"/>
        </concept>
        <concept id="spsocpenaltyviolent-conduct">
            <conceptId qcode="spsocpenalty:violent-conduct"/>
            <name xml:lang="en-US">violent-conduct</name>
            <definition>The player has committed a violent conduct. | This leads to a player being
                sent off the field (red card).</definition>
            <related uri="http://cv.iptc.org/newscodes/spsocpenalty/" rel="skos:inScheme"/>
        </concept>
        <concept id="spsocpenaltyspitting">
            <conceptId qcode="spsocpenalty:spitting"/>
            <name xml:lang="en-US">spitting</name>
            <definition>The player has spitted at an opponent or any other person. | This leads to a
                player being sent off the field (red card).</definition>
            <related uri="http://cv.iptc.org/newscodes/spsocpenalty/" rel="skos:inScheme"/>
        </concept>
        <concept id="spsocpenaltyoffensive-language">
            <conceptId qcode="spsocpenalty:offensive-language"/>
            <name xml:lang="en-US">offensive-language</name>
            <definition>The player has used offensive, insulting or abusive language. | This leads
                to a player being sent off the field (red card).</definition>
            <related uri="http://cv.iptc.org/newscodes/spsocpenalty/" rel="skos:inScheme"/>
        </concept>
        <concept id="spsocpenaltyoffensive-gestures">
            <conceptId qcode="spsocpenalty:offensive-gestures"/>
            <name xml:lang="en-US">offensive-gestures</name>
            <definition>The player has used offensive, insulting or abusive gestures. | This leads
                to a player being sent off the field (red card).</definition>
            <related uri="http://cv.iptc.org/newscodes/spsocpenalty/" rel="skos:inScheme"/>
        </concept>
        <concept id="spsocpenaltyprofessional-infraction">
            <conceptId qcode="spsocpenalty:professional-infraction"/>
            <name xml:lang="en-US">professional-infraction</name>
            <definition>When a player denies another player an obvious goalscoring opportunity by
                foul. | This action leads to the player being sent off the field.</definition>
            <related uri="http://cv.iptc.org/newscodes/spsocpenalty/" rel="skos:inScheme"/>
        </concept>
        <concept id="spsocpenaltyunsporting-behaviour">
            <conceptId qcode="spsocpenalty:unsporting-behaviour"/>
            <name xml:lang="en-US">unsporting-behaviour</name>
            <definition>The player has been doing unsporting behaviour. | This leads to a player
                being given a caution (yellow card).</definition>
            <related uri="http://cv.iptc.org/newscodes/spsocpenalty/" rel="skos:inScheme"/>
        </concept>
        <concept id="spsocpenaltydelaying-restart">
            <conceptId qcode="spsocpenalty:delaying-restart"/>
            <name xml:lang="en-US">delaying-restart</name>
            <definition>The player has delayed the restart of play. | This leads to a player being
                given a caution (yellow card).</definition>
            <related uri="http://cv.iptc.org/newscodes/spsocpenalty/" rel="skos:inScheme"/>
        </concept>
        <concept id="spsocpenaltyillegal-reentry">
            <conceptId qcode="spsocpenalty:illegal-reentry"/>
            <name xml:lang="en-US">illegal-reentry</name>
            <definition>The player re-entered the ﬁeld of play without the referee’s permission. |
                This leads to a player being given a caution (yellow card).</definition>
            <related uri="http://cv.iptc.org/newscodes/spsocpenalty/" rel="skos:inScheme"/>
        </concept>
        <concept id="spsocpenaltyillegal-entry">
            <conceptId qcode="spsocpenalty:illegal-entry"/>
            <name xml:lang="en-US">illegal-entry</name>
            <definition>The player entered the ﬁeld of play without the referee’s permission. | This
                leads to a player being given a caution (yellow card).</definition>
            <related uri="http://cv.iptc.org/newscodes/spsocpenalty/" rel="skos:inScheme"/>
        </concept>
        <concept id="spsocpenaltyrequired-distance-foul">
            <conceptId qcode="spsocpenalty:required-distance-foul"/>
            <name xml:lang="en-US">required-distance-foul</name>
            <definition>The played has failed to respect the required distance when play is
                restarted with a corner kick, free kick or throw-in. | This leads to a player being
                given a caution (yellow card).</definition>
            <related uri="http://cv.iptc.org/newscodes/spsocpenalty/" rel="skos:inScheme"/>
        </concept>
        <concept id="spsocpenaltyillegal-exit">
            <conceptId qcode="spsocpenalty:illegal-exit"/>
            <name xml:lang="en-US">illegal-exit</name>
            <definition>The player has deliberately left the field of play without the referee’s
                permission. | This leads to a player being given a caution (yellow
                card).</definition>
            <related uri="http://cv.iptc.org/newscodes/spsocpenalty/" rel="skos:inScheme"/>
        </concept>
        <concept id="spsocpenaltyhand-ball">
            <conceptId qcode="spsocpenalty:hand-ball"/>
            <name xml:lang="en-US">hand-ball</name>
            <definition/>
            <related uri="http://cv.iptc.org/newscodes/spsocpenalty/" rel="skos:inScheme"/>
        </concept>
